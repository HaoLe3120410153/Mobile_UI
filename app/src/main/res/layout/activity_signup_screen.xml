<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:weightSum="10"
    tools:context=".Screens.SignupScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Tilte_Signin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:paddingTop="15dp"
            android:text="Đăng ký"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/email_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="25dp"
            android:text="Số điện thoại" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:ems="10"
            android:hint="Vui lòng nhập"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/password_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mật khẩu" />

        <EditText
            android:id="@+id/Password"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:ems="10"
            android:hint="Nhập mật khẩu"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/password_confirm_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhập lại Mật khẩu" />

        <EditText
            android:id="@+id/Password_Confirm"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:ems="10"
            android:hint="Nhập lại mật khẩu"
            android:inputType="textPassword" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vui lòng xác nhận thông tin dưới đây để tiếp tục:"

            />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Tiếp tục" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal"
        android:layout_weight="3">

        <TextView
            android:id="@+id/termsTextView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Điều khoản sử dụng"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"
            android:textSize="18sp" />

        <!-- Layout chứa danh sách các checkbox -->
        <LinearLayout
            android:id="@+id/checkboxLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Các checkbox -->
            <CheckBox
                android:id="@+id/checkbox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điều khoản và điều kiện của " />

            <CheckBox
                android:id="@+id/checkbox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mục 2" />

            <!-- Thêm các checkbox khác nếu cần -->
        </LinearLayout>

        <!-- TextView để ẩn danh sách checkbox -->
        <TextView
            android:id="@+id/hideTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ẩn"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"
            android:textSize="18sp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bạn đã có tài khoản"
            android:textAlignment="center"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button_to_loginscreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Đăng nhập"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>